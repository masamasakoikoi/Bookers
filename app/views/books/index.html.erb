<html>
    <head>
        <title>Bookers</title>
    </head>
    <body>
        <h1>Books</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            
            
            <% @books.each do |book| %>
         <tr>
            <td><span><%= book.title %></span></td>
            <td><span><%= book.body %></span></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
         </tr>
        </tbody>
     </table>
        <h2>New book</h2>
            <%=form_with model:@book do |f|%>
            <% if @book.errors.any? %>
                <div id="error_explanation">
                    <h2><%= @book.errors.count %>error prohibited this book from being saved </h2>
                     <ul>
                      <% @book.errors.full_messages.each do |message| %>
                       <li><%= message %></li>
                       <% end %>
                      </ul>
                 </div>
            <% end %>
        
        
        
            <div class="field">
                <div class="field_width_errors">
                    <label for="book_title">Title</label>
                </div>
                <div class="field_width_errors">
                    <%= f.text_field :title %>
                </div>
            </div>
            <div class="field">
                <div class="field_width_errors">
                    <label for="book_body">Body</label>
                </div>
                <div class="field_width_errors">
                    <%= f.text_area :body %>
                </div>
            </div>
            <div class="actions">
                <%= f.submit 'Create Book' %>
            </div>
        <% end %>
    </body>
</html>