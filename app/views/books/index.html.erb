<html>
    <head>
        <title>Bookers</title>
    </head>
    <body>
        <h1>Books</h1>
        <%= @books.each do |book| %>
        <p>タイトル</p>
        <span><%= book.title %></span>
        <%= link_to "destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        <% end %>
        <h2>New book</h2>
        <%=form_with model:@book do |f|%>
            <div class="field">
                <label for="book_title">Title</label>
                <%= f.text_field :title %>
            </div>
            <div class="field">
                <label for="book_body">Body</label>
                <%= f.text_area :body %>
            </div>
            <div class="actions">
                <%= f.submit '投稿' %>
            </div>
        <% end %>
    </body>
</html>